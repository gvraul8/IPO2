<Window x:Class="HITO2_IPO_NUEVO.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HITO2_IPO_NUEVO"
        mc:Ignorable="d"
     
        Title="Principal" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="pnPrincipal">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.95*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridDatosUsuario" Grid.Column="0" Grid.Row="1" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.90*"/>
                <ColumnDefinition Width="0.05*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.25*"/>
                <RowDefinition Height="0.05*"/>
                <RowDefinition Height="0.45*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.05*"/>
            </Grid.RowDefinitions>
            <Image x:Name="imgUsuario" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Width="Auto" Grid.Column="1" Grid.Row="1" Source="/Imagenes/fotoUsuario.jpg"/>
            <Grid x:Name="gridLabelsUsuario"  HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Grid.Column="1" Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.16*"/>
                    <RowDefinition Height="0.16*"/>
                    <RowDefinition Height="0.16*"/>
                    <RowDefinition Height="0.16*"/>
                    <RowDefinition Height="0.16*"/>
                    <RowDefinition Height="0.16*"/>
                </Grid.RowDefinitions>

                <Viewbox Height="Auto" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Left">
                    <Label x:Name="lbNombre"  Content="Nombre" />
                </Viewbox>
                <Viewbox  Height="Auto" VerticalAlignment="Top" Grid.Row="1" HorizontalAlignment="Left">
                    <Label x:Name="lbNombreUsuario"  Content="Nombre" FontWeight="Bold"/>
                </Viewbox>
                <Viewbox Height="Auto" VerticalAlignment="Top" Grid.Row="2" HorizontalAlignment="Left">
                    <Label x:Name="lbApellidos"  Content="Apellidos"/>
                </Viewbox>
                <Viewbox Height="Auto" VerticalAlignment="Top" Grid.Row="3" HorizontalAlignment="Left">
                    <Label x:Name="lbApellidosUsuario"  Content="Apellidos"  FontWeight="Bold"/>
                </Viewbox>
                <Viewbox Height="Auto" VerticalAlignment="Top" Grid.Row="4" HorizontalAlignment="Left" >
                    <Label x:Name="lbEmail"  Content="Email"  />
                </Viewbox>
                <Viewbox VerticalAlignment="Top" Grid.Row="5" HorizontalAlignment="Left">
                    <Label x:Name="lbEmailUsuario"  Content="Nombre@email.com"  FontWeight="Bold" Height="Auto" />
                </Viewbox>

            </Grid>

            <Viewbox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" Width="Auto" Height="Auto" VerticalAlignment="Center" MaxHeight="60" MaxWidth="120">
                <Button x:Name="btCerrarSesion" Content="Cerrar sesión"  Background="#FFC54545" Foreground="White" 
                    BorderBrush="#FFC54545" Click="btCerrarSesion_Click" />
            </Viewbox>
        </Grid>


        <Grid x:Name="gridContenido" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TabControl x:Name="tcPestanas" Width="auto">
                <TabControl.Background>
                    <ImageBrush ImageSource="Imagenes/fondoTab.jpg" Opacity="0.4"/>
                </TabControl.Background>

                <TabItem x:Name="tiRutas" IsSelected="True" Width="110" Height="55" FontSize="20" Margin="0,-1,0,0" VerticalAlignment="Top">
                    <TabItem.Header>
                        <StackPanel Width="100" Height="35">
                            <Grid Height="35">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.75*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="Imagenes/ruta.png" Grid.Column="0"/>
                                <TextBlock Text="RUTAS" HorizontalAlignment="Center" Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>

                    <Grid>
                        <Grid.Background>
                            <ImageBrush/>
                        </Grid.Background>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.50*"/>
                            <ColumnDefinition Width="0.05*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.70*"/>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.025*"/>
                        </Grid.RowDefinitions>

                        <ListBox x:Name="ListBoxRutas" SelectionChanged="rellenaCasillasRuta" SelectionMode="Single" Grid.Row="3" Grid.Column="1"/>

                        <GroupBox x:Name="gb_rutas" Grid.Column="3" Background="White" Grid.Row="3" >
                            <Grid Height="Auto" Width="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.05*"/>
                                    <ColumnDefinition Width="0.40*"/>
                                    <ColumnDefinition Width="0.05*"/>
                                    <ColumnDefinition Width="0.45*"/>
                                    <ColumnDefinition Width="0.05*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.05*"/>
                                    <RowDefinition Height="0.1*"/>
                                    <RowDefinition Height="0.8*"/>
                                    <RowDefinition Height="0.05*"/>
                                </Grid.RowDefinitions>

                                <Viewbox Grid.Column="1" Grid.ColumnSpan="4" Height="Auto" VerticalAlignment="Center" Grid.Row="1">
                                    <TextBox x:Name="tb_nombre" Text="Nombre de la ruta"  FontWeight="Bold" FontSize="24" BorderBrush="Transparent" IsReadOnly="True"/>
                                </Viewbox>


                                <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                        <RowDefinition Height="0.07*"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.9*"/>
                                        <ColumnDefinition Width="0.1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="lb_origen" TextWrapping="Wrap" Text="Origen" Grid.Row="0"  Grid.Column="0" Grid.RowSpan="2" />
                                    <TextBox x:Name="tb_origen" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="1" VerticalAlignment="Top" Grid.Column="0" KeyDown="tb_origen_KeyDown"/>
                                    <Image x:Name="img_tb_origen" Grid.Column="1" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="20" Margin="2,0,0,0" Grid.RowSpan="1" Grid.Row="1"/>


                                    <TextBlock x:Name="lb_destino" TextWrapping="Wrap" Text="Destino" Grid.Row="2" Grid.Column="0" />
                                    <TextBox x:Name="tb_destino" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="3" VerticalAlignment="Top" Grid.Column="0" KeyDown="tb_destino_KeyDown" />
                                    <Image x:Name="img_tb_destino" Grid.Column="1" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="20" Margin="2,0,0,0" Grid.RowSpan="1" Grid.Row="3"/>

                                    <TextBlock x:Name="lb_provincia" TextWrapping="Wrap" Text="Provincia" Grid.Row="4" Grid.Column="0" Grid.RowSpan="2" />
                                    <TextBox x:Name="tb_provincia" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="5" VerticalAlignment="Top" Grid.Column="0" KeyDown="tb_provincia_KeyDown" />

                                    <TextBlock x:Name="lb_fecha" TextWrapping="Wrap" Text="Fecha y hora" Grid.Row="6" Grid.Column="0" />
                                    <DatePicker x:Name="dp_fecha" Grid.Row="7" VerticalAlignment="Top" Grid.Column="0" KeyDown="dp_fecha_KeyDown"/>
                                    <Image x:Name="img_tb_fecha" Grid.Column="1" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="20" Margin="2,0,0,0" Grid.RowSpan="1" Grid.Row="7"/>

                                    <TextBlock x:Name="lb_dificultad" TextWrapping="Wrap" Text="Dificultad" Grid.Row="8" Grid.Column="0" Grid.RowSpan="2" />
                                    <TextBox x:Name="tb_dificultad"  IsReadOnly="True" Grid.Row="9" VerticalAlignment="Top" Grid.Column="0" KeyDown="tb_dificultad_KeyDown"/>
                                    <Image x:Name="img_tb_dificultad" Grid.Column="1" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="20" Margin="2,0,0,0" Grid.RowSpan="1" Grid.Row="9"/>

                                    <TextBlock x:Name="lb_plazas" TextWrapping="Wrap" Text="Plazas disponibles" Grid.Row="10" Grid.Column="0" />
                                    <TextBox x:Name="tb_plazas" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="11" VerticalAlignment="Top" Grid.Column="0" PreviewTextInput="NumericOnly"/>
                                    <Image x:Name="img_tb_plazas" Grid.Column="1" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="20" Margin="2,0,0,0" Grid.RowSpan="1" Grid.Row="11"/>

                                </Grid>

                                <Grid Grid.Column="3" Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.05*"/>
                                        <RowDefinition Height="0.40*"/>
                                        <RowDefinition Height="0.1*"/>
                                        <RowDefinition Height="0.40*"/>
                                        <RowDefinition Height="0.05*"/>
                                    </Grid.RowDefinitions>

                                    <Image x:Name="img_ruta" Grid.Row="1"/>
                                    <ComboBox x:Name="cb_elegirExcursionista" Grid.Row="2" >
                                        <ComboBoxItem Content="Rutas Planificadas"/>
                                        <ComboBoxItem Content="Rutas Realizadas"/>
                                    </ComboBox>

                                    <ListBox x:Name="list_excursionistas" Grid.Row="3" Grid.RowSpan="2" />
                                </Grid>

                            </Grid>

                        </GroupBox>




                        <Grid Grid.Column="3" Grid.ColumnSpan="3" Margin="57,18,57,0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.15*"/>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition Height="0.15*"/>
                            </Grid.RowDefinitions>

                            <Button x:Name ="bt_anadir" Height="Auto" Grid.Row="1" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="151" MaxHeight="60" MaxWidth="120" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="30,0,0,0" Click="bt_anadir_Click"  >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/add.png" Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Añadir"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_editar" Height="Auto" Grid.Row="1"  Grid.Column="3" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="Auto" MaxHeight="60" MaxWidth="120" Click="bt_editar_Click" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="15" Source="/Imagenes/edit.png"  />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Editar"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_eliminar" Height="Auto" Grid.Row="1"  Grid.Column="5" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="Auto" MaxHeight="60" MaxWidth="120" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/delete.png"  Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Eliminar"/></TextBlock>
                                </StackPanel>
                            </Button>


                        </Grid>


                        <Grid Grid.Row="5" Grid.Column="2" RenderTransformOrigin="0.513,0.609" Grid.ColumnSpan="3" Margin="57,22,57,9" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.15*"/>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition Height="0.15*"/>
                            </Grid.RowDefinitions>

                            <Button x:Name ="bt_guardarRuta" Height="30" Grid.Row="1"  Grid.Column="0" VerticalAlignment="Top" Background="ForestGreen" Foreground="Black" Width="Auto" >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Image Source="/Imagenes/save.png" Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Guardar"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_verGuiaRuta" Height="30" Grid.Row="1"  Grid.Column="2" VerticalAlignment="Top" Background="DodgerBlue" Foreground="Black" Width="Auto" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="15" Source="/Imagenes/info.png"  />
                                    <TextBlock Margin="2,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Consultar guia"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_consultarPDis" Height="30" Grid.Row="1"  Grid.Column="5" VerticalAlignment="Top" Background="Yellow" Foreground="Black" Width="Auto" Click="bt_consultarPDis_Click" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/point-of-interest.png"  Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Consultar PDI"/></TextBlock>
                                </StackPanel>
                            </Button>

                        </Grid>

                    </Grid>

                </TabItem>

                <TabItem x:Name="tiGuia" FontSize="20">
                    <TabItem.Header>
                        <StackPanel Width="100" Height="35">
                            <Grid  Height="35">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="0*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*"/>
                                    <ColumnDefinition Width="0.75*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="Imagenes/guia.png" Height="35" Grid.Column="0"/>
                                <TextBlock Text="GUÍAS" HorizontalAlignment="Center" Grid.Column="1"/>
                            </Grid>

                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid>
                        <!-- COPIAR Y PEGAR ELEMENTOS QUE QUIERAS DENTRO DE LA PESTAÑA GUIAS DESDE LINEA 71 A 240-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.05*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.70*"/>
                            <RowDefinition Height="0.025*"/>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.025*"/>
                        </Grid.RowDefinitions>

                        <ListBox x:Name="ListBoxGuias" SelectionChanged="rellenaCasillasGuias" SelectionMode="Single" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1"  />
                        <Grid Grid.Row="3" Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.7*"/>
                                <RowDefinition Height="0.3*"/>
                            </Grid.RowDefinitions>

                            <GroupBox x:Name="gb_guias"  Background="White" >
                                <Grid Height="Auto" Width="Auto">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.05*"/>
                                        <ColumnDefinition Width="0.40*"/>
                                        <ColumnDefinition Width="0.05*"/>
                                        <ColumnDefinition Width="0.45*"/>
                                        <ColumnDefinition Width="0.05*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.05*"/>
                                        <RowDefinition Height="0.15*"/>
                                        <RowDefinition Height="0.75*"/>
                                        <RowDefinition Height="0.05*"/>
                                    </Grid.RowDefinitions>

                                    <Viewbox Grid.Column="1" Grid.ColumnSpan="4" Height="Auto" VerticalAlignment="Center" Grid.Row="1">
                                        <TextBox x:Name="tb_nombreguia" Text="Nombre del guía"  FontWeight="Bold" FontSize="24" BorderBrush="Transparent"/>
                                    </Viewbox>

                                    <Grid Grid.Column="1" Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>
                                            <RowDefinition Height="0.07*"/>

                                        </Grid.RowDefinitions>


                                        <TextBlock x:Name="lb_idomas" TextWrapping="Wrap" Text="Idioma" Grid.Row="0" Grid.ColumnSpan="2"  Grid.RowSpan="2" />
                                        <TextBox x:Name="tb_idiomas" IsReadOnly="True" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" />

                                        <TextBlock x:Name="lb_telefonoguia" TextWrapping="Wrap" Text="Teléfono" Grid.Row="2" Grid.ColumnSpan="2" />
                                        <TextBox x:Name="tb_telefonoguia" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                                        <TextBlock x:Name="lb_correoguia" TextWrapping="Wrap" Text="Correo electrónico" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="2" />
                                        <TextBox x:Name="tb_correoguia"  IsReadOnly="True" Grid.Row="5" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                                        <TextBlock x:Name="lb_disponibilidad" TextWrapping="Wrap" Text="Disponibilidad" Grid.Row="6" Grid.ColumnSpan="2" />
                                        <TextBox x:Name="tb_disponibilidad" TextWrapping="Wrap" IsReadOnly="True" Grid.Row="7" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

                                    </Grid>

                                    <Image x:Name="img_guia" Grid.Column="3" Grid.Row="2"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox x:Name="gb_historialrutas" Grid.Column="3" Background="White" Grid.Row="4"  >
                                <Grid >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.05*"/>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition Width="0.05*"/>
                                        <ColumnDefinition Width="0.55*"/>
                                        <ColumnDefinition Width="0.05*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.05*"/>
                                        <RowDefinition Height="0.15*"/>
                                        <RowDefinition Height="0.05"/>
                                        <RowDefinition Height="0.75*"/>
                                    </Grid.RowDefinitions>
                                    <Viewbox Grid.Column="3" Grid.RowSpan="2" HorizontalAlignment="Center"  Width="309">
                                        <TextBlock x:Name="lb_historial" TextWrapping="Wrap" Text="HISTORIAL DE RUTAS"  FontWeight="Bold" TextAlignment="Center"/>
                                    </Viewbox>

                                    <ComboBox x:Name="cb_rutasGuias" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Height="28" VerticalAlignment="Center" Width="169" SelectionChanged="ComboBoxRutasGuias_SelectionChanged" RenderTransformOrigin="0.488,1.369" >
                                        <ComboBoxItem Content="Rutas Planificadas"/>
                                        <ComboBoxItem Content="Rutas Realizadas"/>
                                    </ComboBox>

                                    <ListBox  x:Name="lb_rutasrealplaGuias" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="3" />
                                </Grid>
                            </GroupBox>
                        </Grid>

                        <Grid Grid.Column="3" Grid.ColumnSpan="3" Margin="57,18,57,0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.15*"/>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition Height="0.15*"/>
                            </Grid.RowDefinitions>

                            <Button x:Name ="bt_anadirGuia" Height="Auto" Grid.Row="1" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="151" MaxHeight="60" MaxWidth="120" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="30,0,0,0" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/add.png" Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Añadir"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_editarGuia" Height="Auto" Grid.Row="1"  Grid.Column="3" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="Auto" MaxHeight="60" MaxWidth="120" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="15" Source="/Imagenes/edit.png"  />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Editar"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_eliminarGuia" Height="Auto" Grid.Row="1"  Grid.Column="5" VerticalAlignment="Top" Background="#FF423F3F" Foreground="White" Width="Auto" MaxHeight="60" MaxWidth="120" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/delete.png"  Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Eliminar"/></TextBlock>
                                </StackPanel>
                            </Button>

                        </Grid>



                        <Grid Grid.Row="5" Grid.Column="2" RenderTransformOrigin="0.513,0.609" Grid.ColumnSpan="3" Margin="57,22,57,9" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>
                                <ColumnDefinition Width="0.05*"/>
                                <ColumnDefinition Width="0.25*"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.15*"/>
                                <RowDefinition Height="0.70*"/>
                                <RowDefinition Height="0.15*"/>
                            </Grid.RowDefinitions>

                            <Button x:Name ="bt_guardarGuia" Height="30" Grid.Row="1"  Grid.Column="1" VerticalAlignment="Top" Background="ForestGreen" Foreground="Black" Click="clickGuardarGuia" Margin="34,1,0,0" Grid.ColumnSpan="2" >
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Imagenes/save.png" Width="15" />
                                    <TextBlock Margin="10,0,0,0" VerticalAlignment="Center"  Width="Auto"><Run Text="Guardar"/></TextBlock>
                                </StackPanel>
                            </Button>

                            <Button x:Name ="bt_ConsultarRuta" Height="31.5" Grid.Row="1"  Grid.Column="4" VerticalAlignment="Top" Background="DodgerBlue" Foreground="Black" Width="Auto" Click="bt_consultarguia_Click" >
